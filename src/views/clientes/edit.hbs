  <div class="content mt-4 p-5 card">
    <div class="row mt-5">
        <div class="col-md-6 mt-5 mx-auto">
            
                <div class="card-header text-center"><h5>Modificar informacion del cliente</h5></div>
                <div class="card-body">
                    <form action="/clientes/modificar/{{clientes.idCliente}}" id="cliente" method="post">
                        <div class="form-group">
                            <input type="text" value="{{clientes.nombrePersona}}" class="form-control campoObligatorio" name="nombrePersona" placeholder="Ingrese el nombre del cliente">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{clientes.apellidoPersona}}" class="form-control campoObligatorio" name="apellidoPersona" placeholder="Ingrese apellido del cliente">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{clientes.correoPersona}}" class="form-control campoObligatorio correoElectronico" name="correoPersona" placeholder="Ingrese el correo del cliente">
                        </div>
                        <input type="submit"  class="btn btn-success btn-block" value="Modificar" >
                    </form>
            </div>      
        </div>
    </div>
</div>